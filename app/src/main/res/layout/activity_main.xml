<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="Cabecera"
            android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="55dp" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/tortuga" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="131dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="132dp"/>
    <ImageView
            android:layout_width="229dp"
            android:layout_height="177dp" app:srcCompat="@drawable/tmntraph"
            android:id="@+id/tortuga"
            android:layout_marginBottom="39dp"
            app:layout_constraintBottom_toTopOf="@+id/radioLeo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="39dp"/>

    <RadioButton
            android:text="Leonardo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioLeo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp" app:layout_constraintEnd_toStartOf="@+id/radioDon"
            android:layout_marginEnd="40dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/radioRafa" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/tortuga"
            android:clickable="true" android:onClick="radioButtonClick"/>
    <RadioButton
            android:text="Donatello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioDon"
            android:layout_marginStart="35dp"
            app:layout_constraintStart_toEndOf="@+id/radioLeo"
            app:layout_constraintBottom_toTopOf="@+id/radioMiguel" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="61dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/tortuga" android:layout_marginBottom="20dp"/>
    <RadioButton
            android:text="Raphael"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioRafa"
            app:layout_constraintTop_toBottomOf="@+id/radioLeo" app:layout_constraintEnd_toStartOf="@+id/radioMiguel"
            android:layout_marginEnd="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="20dp"/>
    <RadioButton
            android:text="Miguelangelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioMiguel"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp" android:layout_marginStart="40dp"
            app:layout_constraintStart_toEndOf="@+id/radioRafa" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/radioDon" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="38dp"/>

</android.support.constraint.ConstraintLayout>