<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="99dp"
            android:layout_height="34dp"
            android:text="Tortugas"
            android:id="@+id/textView2"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="111dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tortuga" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="110dp"/>
    <ImageView
            android:layout_width="229dp"
            android:layout_height="177dp" app:srcCompat="@drawable/tmntraph"
            android:id="@+id/tortuga"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="39dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="51dp" app:layout_constraintHorizontal_bias="0.0"/>

    <RadioGroup
            android:layout_width="138dp"
            android:layout_height="133dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/radioGroup" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tortuga" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp" android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp">


        <RadioButton
                android:text="Donatello"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioDon"
                android:checked="true" android:onClick="radioButtonClick"/>
        <RadioButton
                android:text="Leonardo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioLeo"
                android:checked="false" android:onClick="radioButtonClick"/>
        <RadioButton
                android:text="Michelangelo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioMiguel"
                android:checked="false" android:onClick="radioButtonClick"/>
        <RadioButton
                android:text="Raphael"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioRafa"
                android:checked="false" android:onClick="radioButtonClick"/>
    </RadioGroup>
    <TextView
            android:text="Desarrollado por: Arturo Adrian Huaylla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"
            android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="26dp" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>